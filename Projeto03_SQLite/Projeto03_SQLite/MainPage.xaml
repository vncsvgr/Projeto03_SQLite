<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto03_SQLite.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Cadastros" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Button x:Name="btnCursos" Text="Cadastro de Cursos" Clicked="btnCursos_Clicked" />
        <Button x:Name="btnCidades" Text="Cadastro de Cidades" Clicked="btnCidades_Clicked" />
        <Button x:Name="btnAlunos" Text="Cadastro de Alunos" Clicked="btnAlunos_Clicked" />
        <Button x:Name="btnFechar" Text="Finalizar o Aplicativo" Clicked="btnFechar_Clicked" />

    </StackLayout>

</ContentPage>
